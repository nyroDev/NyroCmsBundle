<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	<mapped-superclass name="NyroDev\NyroCmsBundle\Model\Tooltip">
		<id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
			<options>
				<option name="unsigned">true</option>
			</options>
        </id>
		<field name="ident" type="string" nullable="true" />
		<field name="title" type="string" nullable="false" />
		<field name="content" type="text" nullable="true" />
		<field name="inserted" type="datetime" nullable="false" />
		<field name="updated" type="datetime" nullable="false" />
		<field name="deleted" type="datetime" nullable="true" />
				
		<indexes>
			<index name="tooltip_deleted_lookup_idx" columns="deleted" />
		</indexes>
		
		<unique-constraints>
			<unique-constraint columns="ident" name="tooltip_ident" />
		</unique-constraints>
	</mapped-superclass>
</doctrine-mapping>